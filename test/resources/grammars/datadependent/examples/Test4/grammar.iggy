// Simple Haskell example

start Start
  = Exp

Exp
  = left   Exp '+' Exp
  > 'let' Decls 'in' Exp
  | Num

Decls
  = align offside Decl*
  | ignore '{' Decl (';' Decl)* '}'

Decl
  = Id '=' Exp

terminal Id
  = [a-zA-Z][a-zA-Z0-9]*

terminal Num
  = [1-9][0-9]*

layout terminal Whitespaces
  = [\n\r\t\f\ ]*
