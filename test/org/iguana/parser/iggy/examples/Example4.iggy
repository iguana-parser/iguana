regex {
Id ::= [a-Az-Z][a-Az-Z0-9]*
Num ::= [1-9][0-9]*
}


Exp ::= Exp '+' Exp left
      > "let" Decls "in" Exp
      | Num

Decl ::= Id "=" Exp

/*
 * Expressing indentation rules using the align, offside and ignore constructs of Iguana
 */
Decls ::= align offside Decl*
        | ignore '{' Decl (';' Decl)* '}'

/*
 *  Desugaring align alone:
 */
Decls ::= x:(offside y:Decl [col(x.l)==col(y.l)])*
        | ignore '{' Decl (';' Decl)* '}'